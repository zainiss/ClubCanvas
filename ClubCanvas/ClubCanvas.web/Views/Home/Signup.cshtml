@model ClubCanvas.web.Models.SignupViewModel;

<div class="text-center">
    <h1 class="display-4">Welcome To Club Canvas</h1>
    <h2 class="display4">Sign up</h2>
    <div class="form-floating">
        <form asp-controller="Home" asp-action="Signup" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group" id="form-div">
                <label asp-for="Email" class="form-label">Your email:</label>
                <input asp-for="Email" class="form-control" placeholder="Ex. JohnDoe@gmail.com"/>
            </div>
            <div class="form-group" id="form-div">
                <label asp-for="UserName" class="form-label">Your username:</label>
                <input asp-for="UserName" class="form-control" placeholder="Ex. John"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Your password:</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"/>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>