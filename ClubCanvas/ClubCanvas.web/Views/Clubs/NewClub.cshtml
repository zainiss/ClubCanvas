@model ClubCanvas.web.Models.ClubViewModel;

<div class="text-center">
    <h1 class="display-4">Welcome To Club Canvas</h1>
    <h2 class="display4">Create a Club</h2>
    <div class="form-floating">
        <form asp-controller="Clubs" asp-action="NewClub" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group" id="form-div">
                <label asp-for="Name" class="form-label">Club Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Chess club"/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label">The description for your club:</label>
                <input asp-for="Description" class="form-control" placeholder="Description"/>
            </div>
            <button type="submit" class="btn btn-primary">Create Club</button>
        </form>
    </div>
</div>