@model ClubCanvas.mvc.Models.Club

<div class="text-center mb-5">
    <h2 class="mb-4"><strong>@Model.Name</strong></h2>
</div>

<div class="d-flex justify-content-center">
    <div class="text-center" style="max-width: 800px; width: 100%;">
        <p class="mb-4">@Model.Description</p>

        <div class="mb-4">
            <p><strong>Owner:</strong> @Model.Owner</p>
            <p><strong>Members:</strong> @(Model.Members?.Count ?? 0)</p>
        </div>

        <div>
            <h3 class="mb-3"><strong>Upcoming Events</strong></h3>
            <ul class="list-unstyled">
            @if (Model.Events != null && Model.Events.Count > 0)
            {
                foreach (var e in Model.Events)
                {
                    <li class="mb-2"><strong>@e</strong></li>
                }
            }
            else
            {
                <li class="mb-2">No events yet</li>
            }
            </ul>
        </div>

        <div class="mt-4">
            <a asp-controller="Clubs" asp-action="Index" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>


